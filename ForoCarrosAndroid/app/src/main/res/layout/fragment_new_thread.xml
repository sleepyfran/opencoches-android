<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

    <!-- TÃ­tulo del hilo -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNewThreadTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/etNewThreadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_thread.title"/>

    </android.support.design.widget.TextInputLayout>

    <!-- Enviar -->
    <Button
        android:id="@+id/btnNewThreadSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/new_thread.send"/>

    <!-- Editor -->
    <io.spaceisstrange.opencoches.ui.views.editor.EditorView
        android:id="@+id/evEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnNewThreadSend"
        android:layout_below="@id/tilNewThreadTitle"/>

    <include
        android:id="@+id/vError"
        layout="@layout/view_error"
        android:visibility="gone"/>

</RelativeLayout>