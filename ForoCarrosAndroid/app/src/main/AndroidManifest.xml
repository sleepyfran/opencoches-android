<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.spaceisstrange.opencoches">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.spaceisstrange.opencoches.ui.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.spaceisstrange.opencoches.ui.activities.LoginActivity" />
        <activity
            android:name="io.spaceisstrange.opencoches.ui.activities.SubforosActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="io.spaceisstrange.opencoches.ui.activities.SubforoThreadsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="io.spaceisstrange.opencoches.ui.activities.ThreadActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>